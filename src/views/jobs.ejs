<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Job Card</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
      body {
    background-color: #1a1a2e;
    color: #ffffff;
    font-family: Arial, sans-serif;
}

.card-container {
    margin-top: 20px;
    display: grid;
    flex-direction: row;
    gap: 10px;
}

.card {
    background-color: #16213e;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
    padding: 20px;
    margin-bottom: 20px;
    transition: transform 0.2s ease-in-out;
    border: none;
    display: grid;
  
    align-items: center;
}

.card:hover {
    transform: translateY(-5px);
}

.card-title {
    font-size: 1.3rem;
    color: #ffd700;
    margin-bottom: 5px;
}

.card-subtitle {
    font-size: 0.9rem;
    color: #a0a0a0;
    margin-bottom: 10px;
}

.card-text {
    font-size: 0.9rem;
    color: #ffffff;
}

.card-text strong {
    color: #4da6ff;
}

.badge {
    background-color: #0f3460;
    color: #ffffff;
    padding: 5px 10px;
    border-radius: 15px;
    font-size: 0.8rem;
    margin-right: 5px;
    margin-bottom: 5px;
    display: inline-block;
}

.hiring-badge {
    background-color: #4caf50;
    color: #ffffff;
    padding: 5px 10px;
    border-radius: 15px;
    font-size: 0.8rem;
    position: absolute;
    top: 10px;
    right: 10px;
}

.location-text {
    color: #a0a0a0;
    font-size: 0.9rem;
    margin-bottom: 10px;
}

.salary-text {
    color: #ffd700;
    font-size: 1rem;
    font-weight: bold;
    margin-bottom: 10px;
}

.total-positions-text {
    color: #a0a0a0;
    font-size: 0.9rem;
    margin-bottom: 10px;
}

.total-openings-text {
    color: #a0a0a0;
    font-size: 0.9rem;
    margin-bottom: 10px;
}

.apply-by-text {
    color: #a0a0a0;
    font-size: 0.9rem;
    margin-bottom: 10px;
}

.view-details-btn {
    background-color: #0f3460;
    color: #ffffff;
    border: none;
    padding: 5px 15px;
    border-radius: 5px;
    font-size: 0.9rem;
    cursor: pointer;
    transition: background-color 0.2s ease-in-out;
}

.view-details-btn:hover {
    background-color: #1a4b8c;
}

    </style>
</head>
<body>
    <div class="container card-container">
        <% if (typeof applications !== 'undefined' && applications && applications.length > 0) { %>
            <% applications.forEach(application => { %>

                <input type="hidden" class="form-control" id="id" name="id" >

                <div class="card">
                    <div class="card-body">
                        <span class="hiring-badge">Actively hiring</span>
                        <h5 class="card-title"><%= application.companyName %></h5>
                        <h5 class="card-title"><%= application.jobCategory %></h5>
                        <h6 class="card-subtitle"><%= application.jobDesignation %></h6>
                        <p class="location-text">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-geo-alt-fill" viewBox="0 0 16 16">
                                <path d="M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10zm0-7a3 3 0 1 1 0-6 3 3 0 0 1 0 6z"/>
                            </svg>
                            <%= application.jobLocation %>
                        </p>
                        <p class="salary-text"><%= application.salary %></p>
                        <p class="total-positions-text">Total Positions: <%= application.totalPositions %></p>
                        <p class="total-openings-text">Total Openings: <%= application.totalOpenings %></p>
                        <p class="apply-by-text">Apply By: <%= application.applyBy %></p>

                        <div class="mb-3">
                            <% if (application.skills && Array.isArray(application.skills)) { %>
                                <% application.skills.forEach(skill => { %>
                                    <span class="badge"><%= skill %></span>
                                <% }); %>
                            <% } %>
                        </div>
                        <a class="view-details-btn"  href="/jobdetails/<%=application.id%>"> View details</a>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <div class="alert alert-info" role="alert">
                No job applications found. 
                <a href="/newapplication" class="alert-link">Click here to post a new job</a>
            </div>
        <% } %>
    </div>

   
</body>
</html>